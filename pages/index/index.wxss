/**index.wxss**/
page {
  height: 100%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.banner {
  background-color:#ff6a99;
  width: 100%;
  height: 48rpx;
  position: fixed;
  align-items: center;
  display: flex;
  justify-content: center;
}

.line {
  position: absolute;
  height: 3rpx;
  width: 107rpx;
  background-color: white;
  transition: transform .3s;
}

.line.line-active-1 {
  transform: translateX(0);
}

.line.line-active-2 {
  transform: translateX(107rpx);
}

.line.line-active-3 {
  transform: translateX(214rpx);
}

.line.line-active-4 {
  transform: translateX(321rpx);
}

.line.line-active-5 {
  transform: translateX(428rpx);
}

.line.line-active-6 {
  transform: translateX(535rpx);
}

.line.line-active-7 {
  transform: translateX(642rpx);
}

/* .day.active {
  border-bottom: white solid 4rpx;
} */

.day {
  display: inline-block;
  color: white;
  font-size: 30rpx;
  width: 107rpx;
  letter-spacing: 0;
  text-align: center;
}

.item {
  background-color: #fafafa;
  /* background-color: white; */
  width: 100%;
}

.tab {
  height:calc(100vh - 48rpx);
  width:100%;
  margin-top:48rpx;
  display:flex;
  position: fixed;
}

.bangumi {
  display: inline-block;
  width: 210rpx;
  height: 300rpx;
  background: gray;
  border-radius: 10rpx;
  margin-left: 32rpx;
  margin-top: 20rpx;
  vertical-align: top;
  position: relative;
}

.bangumi .avatar {
  width: 210rpx;
  height: 300rpx;
}

.bangumi .avatar image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.bangumi .info .title {
  color: white;
  font-size: 25rpx;
} 

.bangumi .info {
  display: flex;
  padding-left: 15rpx;
  position: absolute;
  bottom: 0;
  height: 150rpx;
  background: linear-gradient(180deg,rgba(0,0,0,0),rgba(0,0,0,.6));
  z-index: 1;
  width: 195rpx;
  vertical-align: bottom;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.bangumi .info .time {
  color: white;
  font-size: 15rpx;
}

.bangumi .info .copyright {
  color: white;
  font-size: 15rpx;
}